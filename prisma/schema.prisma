// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String     @id @default(cuid())
  name           String
  email          String     @unique
  hashedPassword String
  role           UserRole   @default(AGENT)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  
  assignedLeads  Lead[]     @relation("AssignedLeads")
  activities     Activity[]
}

enum UserRole {
  ADMIN
  AGENT
}

model Lead {
  id          String     @id @default(cuid())
  fullName    String
  email       String
  phone       String?
  source      LeadSource @default(OTHER)
  status      LeadStatus @default(NEW)
  budgetMin   Float?
  budgetMax   Float?
  notes       String?
  assignedToId String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  assignedTo  User?      @relation("AssignedLeads", fields: [assignedToId], references: [id])
  deals       Deal[]
  activities  Activity[]
  formSubmissions LandingPageFormSubmission[]
}

enum LeadSource {
  LANDING_PAGE
  MANUAL
  REFERRAL
  OTHER
}

enum LeadStatus {
  NEW
  CONTACTED
  VIEWING_SCHEDULED
  OFFER_MADE
  CLOSED
  LOST
}

model Property {
  id           String         @id @default(cuid())
  title        String
  slug         String         @unique
  address      String
  city         String
  country      String
  price        Float
  status       PropertyStatus @default(ACTIVE)
  mainImageUrl String
  gallery      String?        // JSON string or comma-separated URLs
  beds         Int?
  baths        Int?
  areaSqm      Float?
  description  String
  published    Boolean        @default(true)
  heroTitle    String?
  heroSubtitle String?
  ctaText      String?
  metaTitle    String?
  metaDescription String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  
  deals        Deal[]
  activities   Activity[]
  formSubmissions LandingPageFormSubmission[]
}

enum PropertyStatus {
  ACTIVE
  UNDER_CONTRACT
  SOLD
  OFF_MARKET
}

model Deal {
  id               String     @id @default(cuid())
  leadId           String
  propertyId       String
  stage            DealStage  @default(NEGOTIATION)
  offerPrice       Float?
  closedPrice      Float?
  expectedCloseDate DateTime?
  commissionRate   Float?     @default(0.03)
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  
  lead             Lead       @relation(fields: [leadId], references: [id], onDelete: Cascade)
  property         Property   @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  activities       Activity[]
}

enum DealStage {
  NEGOTIATION
  UNDER_CONTRACT
  CLOSED
  FALLTHROUGH
}

model Activity {
  id         String       @id @default(cuid())
  leadId     String?
  propertyId String?
  dealId     String?
  userId     String
  type       ActivityType
  content    String
  createdAt  DateTime     @default(now())
  
  lead       Lead?        @relation(fields: [leadId], references: [id], onDelete: Cascade)
  property   Property?    @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  deal       Deal?        @relation(fields: [dealId], references: [id], onDelete: Cascade)
  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum ActivityType {
  NOTE
  CALL
  EMAIL
  MEETING
  VIEWING
}

model LandingPageFormSubmission {
  id         String   @id @default(cuid())
  propertyId String
  fullName   String
  email      String
  phone      String?
  message    String?
  leadId     String?
  createdAt  DateTime @default(now())
  
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  lead       Lead?    @relation(fields: [leadId], references: [id], onDelete: SetNull)
}
